apiVersion: v1
kind: Service
metadata:
  name: realtime
  labels:
    app: realtime
    app.kubernetes.io/name: realtime-gitops
    app.kubernetes.io/component: realtime-gitops-frontend
spec:
  # if your cluster supports it, uncomment the following to automatically create
  # an external load-balanced IP for the git-ops-colour-frontend service.
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: realtime
    app.kubernetes.io/name: realtime-gitops
    app.kubernetes.io/component: realtime-gitops-frontend
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: realtime
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  tls:
  - hosts:
    - realtime.weaveworks.tech
    secretName: realtime-weaveworks-tech-crt
  rules:
  - host: realtime.weaveworks.tech
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: realtime-gitops-frontend
            port:
              number: 80